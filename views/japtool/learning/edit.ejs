<div class="modal-content">
    <div class="modal-header">
        <h2><%=__("Create new learning")%></h2>
    </div>
    <div class="modal-body">
        <div class="content">

            <div class="clearfix">
                <div class="col-sm-10 learning-group-item">
                    <div class="row">
                        <div class="col-sm-2">
                            <label><%=__("From")%></label>
                        </div>
                        <div class="col-sm-4">
                            <input type="hidden" value="<%= learning.id %>" name="id">
                            <input type="date" disabled="true" class="form-control"
                                   value="<%= learning.stringStartDate %>" name="startDate"
                                   id="startDate"><br>

                            <div id="mesagestartDate"></div>
                        </div>

                        <div class="col-sm-2">
                            <label><%=__("To")%></label>
                        </div>
                        <div class="col-sm-4">
                            <input type="date" class="form-control" value="<%= learning.stringFinishDate %>"
                                   name="finishDate" id="finishDate"><br>

                            <div id="mesagefinishDate"></div>
                        </div>

                    </div>
                </div>
                <div class="col-sm-2 hidden-md hidden-xs">
                </div>
            </div>
            <div class="clearfix">
                <div class="col-sm-10 learning-group-item">
                    <div class="row">
                        <div class="col-sm-2">
                            <label><%=__("Notes")%></label>
                        </div>
                        <div class="col-sm-10">
                                    <textarea class="form-control"
                                              rows="4"
                                              id="notes"
                                              name="notes"><%= learning.notes %></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="library-content-desc" style="margin-bottom: 150px">
                    <div class="col-sm-12" style="padding-left: 160px">
                        <div class="desc-library" id="placebook">
                            <% if(learning){ %>
                            <div class="col-sm-2">
                                <input type="hidden" name="lbr" value="lbr">
                                <img
                                        <% if (learning.bookMaster.image) { %>
                                        src="/media/image/<%= learning.bookMaster.image %>"
                                        <% } else { %>
                                        src="/images/bookicon.jpg"
                                        <% } %>
                                        width="100" height="100">
                                <input id="idbook" type="hidden" name="bookMaster"
                                       value="<%= learning.bookMaster.id %>">
                            </div>
                            <div class="col-sm-4" style="padding-top: 40px">
                                <b><%= learning.bookMaster.name %></b><br>
                                <b>Level : <%= learning.bookMaster.level %></b>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Trigger the modal with a button -->
            <div style="padding-left: 150px">
                <input type="submit"
                       class="btn btn-success"
                       value="<%=__("Save")%>"
                       id="btnCreateLearning"/>
                <a href="#" class="btn btn-warning" role="button" data-dismiss="modal"><%=__("Close")%></a>
            </div>
        </div>
    </div>
    <!--<div class="modal-footer">
        <input type="submit"
               class="btn btn-success"
               value="Save"
               id="btnCreateLearning"/>
        <a href="#" class="btn btn-warning" role="button" data-dismiss="modal">Close</a>
    </div>-->
</div>
