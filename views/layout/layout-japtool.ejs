<body>
<div class="header">
    <div class="header-top">
        <div class="container">
            <div class="row">
                <div class="account-right col-sm-7 col-sm-offset-5">

                    <% if(session.authenticated){ %>
                    <span><%= __('Welcome') %> <a id="userIdInSession" userId="<%= session.User.id %>"
                                                  href="/japtool/user/show/<%= session.User.id %>"><%= session.User.username %></a></span><a
                            href="/japtool/auth/destroy"><%= __('Sign Out') %></a>
                    <% } else { %>
                    <a href="/japtool/auth"><%= __('Sign In') %></a>
                    <a href="/japtool/user/new"><%= __('register') %></a>
                    <% } %>

                        <!-- <a id="lang-en-option" data-toggle="tooltip" data-placement="left" class="language"
                           title="<%= __('Click to change language interface') %>"> <img src="/images/en.png"></a>

                        <a id="lang-vi-option" data-toggle="tooltip" data-placement="left" class="language"
                           title="<%= __('Click to change language interface') %>"> <img src="/images/vi.png"></a>

                        <a id="lang-ja-option" data-toggle="tooltip" data-placement="left" class="language"
                           title="<%= __('Click to change language interface') %>"> <img src="/images/ja.png"></a> -->
                </div>
            </div>
        </div>
    </div>
    <div class="header-center clearfix">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="header-logo">
                        <% if(session.authenticated){ %>
                        <a class="logo" href="/japtool/home"><img src="/images/logo.png"></a>
                        <% } else { %>
                        <a class="logo" href="/"><img src="/images/logo.png"></a>
                        <% } %>
                    </div>
                </div>

            </div>
        </div>
        <div class="stripe_color"></div>
    </div>
    <div class="header-bottom">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id='cssmenu' class="">
                        <ul class="menu-page">
                            <% if(session.authenticated){ %>
                            <li><a href='/japtool/home'><%= __('Home') %></a></li>
                            <% } else { %>
                            <li><a href='/'><%= __('Home') %></a></li>
                            <% } %>
                            <li><a href='/japtool/page/about'><%= __('About') %></a></li>
                            <li><a href='/japtool/Library/index'><%= __('Library') %></a>
                            </li>
                            <li><a href="/japtool/learning"><%= __('Learning') %></a></li>
                            <li><a href="/japtool/page/guide"><%= __('Use Guide') %></a></li>
                            <li><a href='/japtool/page/contact'><%= __('Contact') %></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="body-content">
    <%- body %>
</div>

<div class="split-footer"></div>

<div class="footer">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul class="list-inline">
                    <li>Kantan</li>
                    <li><a>Sign Up</a></li>
                    <li><a href="/japtool/page/guide">Guide</a></li>
                    <li><a href="/japtool/page/orient">Orient</a></li>
                    <li><a href="/japtool/page/contact">Contact</a></li>
                </ul>
            </div>
            
