<div class="container">
    <div class="row">

		<table class='table table-bordered table-hover'>
		  	<tr>
		  	<th>No</th>
		  	<th>cover</th>
		  	<th>lesson</th>
		  	<th>sublesson</th>
		  	<th></th>
		  	</tr>

			<% bookdetails.forEach( function(book, index){ %>
		  	<tr>
		  	<td><%= index + 1 %></td>
		  	<td>
		  		<% if (book.image) { %>
		  			<img src="/media/image/<%=book.image%>" height="70" width="50">
		  		<% } else {%>
		  			<img src="/images/book_default_cover.png" height="70" width="50">
		  		<% } %>
		  	</td>
		  	<td><%= book.lesson %></td>
		  	<td><%= book.subLesson %></td>
		  	<td>
		  	<a class="btn btn-warning btn-xs" href="/admin/search/vocabulary/<%=book.id %>">Choose</a>  
		  	</td></tr>
			<% }); %>
		</table>

    </div>
</div>
